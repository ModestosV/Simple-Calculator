<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calculator_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey_pressed_mask"
    tools:context=".activities.MainActivity"
    tools:ignore="HardcodedText"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/btn_custom_4"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="[4]"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_1"
        app:layout_constraintEnd_toStartOf="@+id/btn_1" />

    <Button
        android:id="@+id/btn_custom_5"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="[5]"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_0"
        app:layout_constraintEnd_toStartOf="@+id/btn_0" />

    <TextView
        android:id="@+id/formula"
        android:layout_width="386dp"
        android:layout_height="65dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="380dp"
        android:layout_height="53dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical|end"
        android:maxLines="1"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin"
        android:textSize="@dimen/display_text_size"
        app:layout_constraintBottom_toTopOf="@+id/btn_clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/formula" />


    <Button
        android:id="@+id/btn_0"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="0"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_plus_minus"
        app:layout_constraintEnd_toStartOf="@+id/btn_plus_minus" />

    <Button
        android:id="@+id/btn_1"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="1"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_2"
        app:layout_constraintEnd_toStartOf="@+id/btn_2" />

    <Button
        android:id="@+id/btn_2"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="2"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_3"
        app:layout_constraintEnd_toStartOf="@+id/btn_3" />

    <Button
        android:id="@+id/btn_3"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="3"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_left_bracket"
        app:layout_constraintEnd_toStartOf="@+id/btn_left_bracket" />

    <Button
        android:id="@+id/btn_4"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="4"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_5"
        app:layout_constraintEnd_toStartOf="@+id/btn_5" />

    <Button
        android:id="@+id/btn_5"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="5"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_6"
        app:layout_constraintEnd_toStartOf="@+id/btn_6" />

    <Button
        android:id="@+id/btn_6"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="6"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_plus"
        app:layout_constraintEnd_toStartOf="@+id/btn_plus" />

    <Button
        android:id="@+id/btn_7"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="7"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_8"
        app:layout_constraintEnd_toStartOf="@+id/btn_8" />

    <Button
        android:id="@+id/btn_8"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="8"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_9"
        app:layout_constraintEnd_toStartOf="@+id/btn_9" />

    <Button
        android:id="@+id/btn_9"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="9"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_multiply"
        app:layout_constraintEnd_toStartOf="@+id/btn_multiply" />

    <Button
        android:id="@+id/btn_decimal"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="."
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_equals"
        app:layout_constraintEnd_toStartOf="@+id/btn_equals" />

    <Button
        android:id="@+id/btn_clear"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="CLR"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_divide"
        app:layout_constraintEnd_toEndOf="@+id/btn_divide" />

    <Button
        android:id="@+id/btn_delete"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="DEL"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_clear"
        app:layout_constraintEnd_toStartOf="@+id/btn_clear" />

    <Button
        android:id="@+id/btn_equals"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="120sp"
        android:text="="
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_right_bracket"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text=")"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_equals"
        app:layout_constraintEnd_toEndOf="@+id/btn_equals" />

    <Button
        android:id="@+id/btn_left_bracket"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="("
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_right_bracket"
        app:layout_constraintEnd_toStartOf="@+id/btn_right_bracket" />

    <Button
        android:id="@+id/btn_plus_minus"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="±"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_decimal"
        app:layout_constraintEnd_toStartOf="@+id/btn_decimal" />

    <Button
        android:id="@+id/btn_modulo"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="%"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_power"
        app:layout_constraintEnd_toStartOf="@+id/btn_power" />

    <Button
        android:id="@+id/btn_power"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="^"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_root"
        app:layout_constraintEnd_toStartOf="@+id/btn_root" />

    <Button
        android:id="@+id/btn_root"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="√"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_delete"
        app:layout_constraintEnd_toStartOf="@+id/btn_delete" />

    <Button
        android:id="@+id/btn_divide"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="÷"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_minus"
        app:layout_constraintEnd_toEndOf="@+id/btn_minus" />

    <Button
        android:id="@+id/btn_multiply"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="×"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_divide"
        app:layout_constraintEnd_toStartOf="@+id/btn_divide" />

    <Button
        android:id="@+id/btn_minus"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="-"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_right_bracket"
        app:layout_constraintEnd_toEndOf="@+id/btn_right_bracket" />

    <Button
        android:id="@+id/btn_plus"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="+"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_minus"
        app:layout_constraintEnd_toStartOf="@+id/btn_minus" />

    <Button
        android:id="@+id/btn_custom_1"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="[1]"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_modulo"
        app:layout_constraintEnd_toStartOf="@+id/btn_modulo" />

    <Button
        android:id="@+id/btn_custom_2"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="[2]"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_7"
        app:layout_constraintEnd_toStartOf="@+id/btn_7" />

    <Button
        android:id="@+id/btn_custom_3"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60sp"
        android:text="[3]"
        android:textColor="@color/color_accent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_4"
        app:layout_constraintEnd_toStartOf="@+id/btn_4" />

</android.support.constraint.ConstraintLayout>
